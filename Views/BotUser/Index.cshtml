@using AlgoBotBackend.Migrations.DAL
@model IEnumerable<User>

@{
    ViewData["Title"] = "Все пользователи";
}

<h1>Все пользователи</h1>
<h4>Количество: @Model.Count()</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Юзернейм
            </th>
            <th>
                Юзернейм реферала
            </th>
            <th>
                Имя
            </th>
            <th>
                Номер телефона
            </th>
            <th>
                Возраст ребёнка
            </th>
            <th>
                Имя ребёнка
            </th>
            <th>
                Счёт
            </th>
            <th>
                Кэшбек
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReferalUsername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChildAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChildName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score) рублей
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cashback) рублей
                </td>

                <td>
                    <form asp-controller="botuser" asp-action="details" asp-antiforgery="false" method="get" asp-route-username="@item.Login">
                        <input type="submit" value="Подробнее" class="btn btn-outline-primary btn-sm" />
                    </form>
   
                </td>
                <td>
                    <form asp-controller="botuser" asp-action="edit" asp-antiforgery="false" method="get" asp-route-username="@item.Login">
                        <input type="submit" value="Добавить оплату" class="btn btn-outline-success btn-sm" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="user" asp-action="randomcreate" asp-antiforgery="false" method="post">
    <input type="submit" value="Сгенерировать рандомных 10 пользователей" class="btn btn-success btn-sm" />
</form>